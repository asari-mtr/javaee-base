<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
    http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <application>
        <message-bundle>message</message-bundle>
        <locale-config>
            <default-locale>en</default-locale>
            <supported-locale>ja</supported-locale>
        </locale-config>
        <resource-bundle>
            <base-name>resource</base-name>
            <var>res</var>
        </resource-bundle>
    </application>
    <navigation-rule>
        <from-view-id>/*</from-view-id>
        <navigation-case>
            <from-outcome>signup</from-outcome>
            <to-view-id>/signup.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>global-home</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>global-todo</from-outcome>
            <to-view-id>/todo/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>global-project</from-outcome>
            <to-view-id>/project/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>global-account</from-outcome>
            <to-view-id>/user/index.xhtml</to-view-id>
        </navigation-case>
        <!-- 管理者用 -->
        <navigation-case>
            <from-outcome>global-user</from-outcome>
            <to-view-id>/admin/user/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <!--  管理者用/ユーザ管理 -->
    <navigation-rule>
        <from-view-id>/admin/user/*</from-view-id>
        <navigation-case>
            <from-outcome>index</from-outcome>
            <to-view-id>/admin/user/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>view</from-outcome>
            <to-view-id>/admin/user/view.xhtml</to-view-id>
            <redirect>
                <view-param>
                    <name>id</name>
                    <value>#{flash.id}</value>
                </view-param>
            </redirect>
        </navigation-case>
        <navigation-case>
            <from-outcome>edit</from-outcome>
            <to-view-id>/admin/user/edit.xhtml</to-view-id>
            <redirect include-view-params="true"/>
        </navigation-case>
    </navigation-rule>
</faces-config>